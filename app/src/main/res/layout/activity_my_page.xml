<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPage">
    <LinearLayout
        android:id="@+id/main_topmenu_bar"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#00b4cb"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/main_top_alignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textSize="20sp"
        android:fontFamily="@font/nanumsquareroundb"
        android:textColor="@color/white"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/main_topmenu_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#dbf6f9"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이현민"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/nanumsquareroundb"
                android:textSize="20sp"
                android:textColor="@color/black" >

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IT미디어공학과"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:fontFamily="@font/nanumsquareroundb"
                android:textSize="17sp"
                android:textColor="#787878">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20191006"
                android:padding="3dp"
                android:fontFamily="@font/nanumsquareroundb"
                android:textSize="17sp"
                android:textColor="#787878" >

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#f1f1f1"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="커뮤니티"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/nanumsquareroundb"
                android:textSize="20sp"
                android:textColor="@color/black" >

            </TextView>


            <TextView
                android:id="@+id/commu_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="내가 쓴 글"
                android:padding="3dp"
                android:fontFamily="@font/nanumsquareroundb"
                android:textSize="17sp"
                android:textColor="#787878">

            </TextView>
            <TextView
                android:id="@+id/commu_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공감한 글"
                android:padding="3dp"
                android:fontFamily="@font/nanumsquareroundb"
                android:textSize="17sp"
                android:textColor="#787878" >

            </TextView>
            <TextView
                android:id="@+id/commu_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내가 쓴 답글"
                android:padding="3dp"
                android:fontFamily="@font/nanumsquareroundb"
                android:textSize="17sp"
                android:textColor="#787878" >

            </TextView>
            <TextView
                android:id="@+id/commu_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스크랩한 글"
                android:padding="3dp"
                android:fontFamily="@font/nanumsquareroundb"
                android:textSize="17sp"
                android:textColor="#787878" >

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#f1f1f1"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림설정"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/nanumsquareroundb"
                android:textSize="20sp"
                android:textColor="@color/black" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ala_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체 알림"
                    android:padding="3dp"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:textSize="17sp"
                    android:textColor="#787878" />

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Switch>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ala_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스크랩 알림"
                    android:padding="3dp"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:textSize="17sp"
                    android:textColor="#787878">
                </TextView>
                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Switch>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ala_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="답변 알림"
                    android:padding="3dp"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:textSize="17sp"
                    android:textColor="#787878">
                </TextView>
                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Switch>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>