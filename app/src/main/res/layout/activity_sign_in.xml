<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <LinearLayout
        android:id="@+id/main_topmenu_bar"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#00b4cb"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/main_top_alignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="20sp"
        android:fontFamily="@font/nanumsquareroundb"
        android:textColor="@color/white"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/main_topmenu_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:fontFamily="@font/nanumsquareroundb"
                android:textSize="20sp"
                android:textColor="@color/black" >

            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="학번을 입력하세요"
                android:fontFamily="@font/nanumsquareroundr"
                android:textSize="15sp"
                android:inputType="number"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:fontFamily="@font/nanumsquareroundb"
                android:textSize="20sp"
                android:textColor="@color/black" >

            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="비밀번호을 입력하세요"
                android:fontFamily="@font/nanumsquareroundr"
                android:textSize="15sp"
                android:inputType="textPassword"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:fontFamily="@font/nanumsquareroundb"
                android:textSize="20sp"
                android:textColor="@color/black" >

            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="이름을 입력하세요"
                android:fontFamily="@font/nanumsquareroundr"
                android:textSize="15sp"
                android:inputType="text"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전공"
                android:fontFamily="@font/nanumsquareroundb"
                android:textSize="20sp"
                android:textColor="@color/black"
                >

            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="1전공을 입력하세요"
                android:fontFamily="@font/nanumsquareroundr"
                android:textSize="15sp"
                android:inputType="text"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학교 이메일"
                android:fontFamily="@font/nanumsquareroundb"
                android:textSize="20sp"
                android:textColor="@color/black" >

            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="학교 이메일을 입력하세요"
                android:fontFamily="@font/nanumsquareroundr"
                android:textSize="15sp"
                android:inputType="textEmailAddress"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증코드"
                android:fontFamily="@font/nanumsquareroundb"
                android:textSize="20sp"
                android:textColor="@color/black" >

            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="학교 이메일에서 인증코드를 확인하세요"
                android:fontFamily="@font/nanumsquareroundr"
                android:textSize="15sp"
                android:inputType="number"/>

        </LinearLayout>
        <Button
            android:id="@+id/join_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="가입하기"
            android:background="@drawable/et_login_input"
            android:fontFamily="@font/nanumsquareroundb"
            android:textSize="17sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/delete"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>