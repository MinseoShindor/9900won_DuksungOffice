<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_rectangle_write"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:id="@+id/layout_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/list_view_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_list_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차관 2층에 있는 공대 실습실 컴퓨터 xx번 고장났습니다"
                android:fontFamily="@font/nanumsquareroundr"
                android:textColor="@color/black"
                android:textSize="17sp" >
            </TextView>


        </LinearLayout>

        <TextView
            android:id="@+id/main_list_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11sp"
            android:text="시험을 봐야하는 상황에서 이렇게 기구 관리가 제대로 되어있지 않으면 많은 학생들이 손해를 볼 것 입니다 "
            android:textSize="12sp"
            android:fontFamily="@font/nanumsquareroundr"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/main_list_view_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">


            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>


            <ImageView
                android:id="@+id/main_list_photo_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_image_regular" />

            <TextView
                android:id="@+id/main_list_photo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#5e5e5e"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="22dp"
                android:fontFamily="@font/nanumsquareroundb" />

            <View
                android:id="@+id/main_vertical_view2"
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:backgroundTint="#5e5e5e"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="10dp"
                android:background="@color/list_font" />


            <ImageView
                android:id="@+id/main_list_reply_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_down_short_wide_solid"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/main_list_replay_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="11dp"
                android:fontFamily="@font/nanumsquareroundb" />


            <ImageView
                android:id="@+id/main_list_thumbs_up_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_thumbs_up" />

            <TextView
                android:id="@+id/main_list_thumbs_up_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/nanumsquareroundb" />


            <ImageView
                android:id="@+id/main_list_scrap_iv"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_bookmark_regular" />

            <TextView
                android:id="@+id/main_list_scrap_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="39"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/nanumsquareroundb" />


        </LinearLayout>

        <!--        <View-->
        <!--            android:id="@+id/login_tv2_underscore_view"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="2px"-->
        <!--            android:layout_marginTop="8sp"-->
        <!--            android:background="@color/list_font" />-->

    </LinearLayout>

</LinearLayout>