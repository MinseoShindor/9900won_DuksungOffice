<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#d3d3d3"
    tools:context=".ContentInsideActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d3d3d3"
        >

        <LinearLayout
            android:id="@+id/content_inside_top_bar"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="#00b4cb"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시설"
            android:textColor="@color/white"
            android:fontFamily="@font/nanumsquareroundb"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <LinearLayout
            android:id="@+id/content_inside_layout1"
            android:layout_width="380dp"
            android:layout_height="270dp"
            android:background="@drawable/background_rectangle_write"
            android:layout_marginTop="18dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/content_inside_top_bar">

            <TextView
                android:id="@+id/content_inside_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IT 학과 졸업 작품실 컴퓨터 사양 관련하여 건의드립니다"
                android:textSize="17sp"
                android:fontFamily="@font/nanumsquareroundb"
                android:textColor="@color/black"
                android:padding="10dp" />

            <TextView
                android:id="@+id/content_inside_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022-08-23"
                android:textSize="12sp"
                android:fontFamily="@font/nanumsquareroundb"
                android:textColor="@color/list_font"
                android:paddingStart="10dp" />

            <LinearLayout
                android:id="@+id/content_inside_name_layout"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/content_inside_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:paddingStart="10dp"
                    android:text="익명"
                    android:textColor="@color/list_font"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/content_inside_photo_iv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="300dp"
                    android:src="@drawable/ic_image_regular" />

                <TextView
                    android:id="@+id/content_inside_photo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#5e5e5e"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="7dp"
                    android:fontFamily="@font/nanumsquareroundb" />


            </LinearLayout>

            <View
                android:id="@+id/content_inside_underscore_view1"
                android:layout_width="400dp"
                android:layout_height="3.5px"
                android:background="#9e9e9e"
                android:layout_marginTop="5dp" />


            <TextView
                android:id="@+id/content_inside_content_tv"
                android:layout_width="match_parent"
                android:layout_height="208dp"
                android:fontFamily="@font/nanumsquareroundb"
                android:padding="10dp"
                android:text="프로젝트를 진행하는데 있어서 필요한 프로그램의 사양에 비해 컴퓨터의 상태가 좋지 않습니다 더 좋은 작품을 내기 위해서는 많은 관심을 필요로 합니다. 앞으로의 후배들을 위해서라도 졸업 작품실 개선은 필수 불가결할 것입니다."
                android:textColor="@color/list_font"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/content_inside_thumbs_up_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="260dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_thumbs_up" />

                <TextView
                    android:id="@+id/content_inside_thumbs_up_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:text="200"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/content_inside_scrap_iv"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_bookmark_regular" />

                <TextView
                    android:id="@+id/content_inside_scrap_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:text="39"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>





        <!--            <Button-->
        <!--                android:layout_width="50dp"-->
        <!--                android:layout_height="20dp"-->
        <!--                android:background="@drawable/btn_rectangle_write"-->
        <!--                android:layout_marginStart="320dp"-->
        <!--                android:text="글쓰기"-->
        <!--                android:textSize="13sp"-->
        <!--                android:layout_marginTop="3dp"-->
        <!--                android:layout_marginBottom="3dp" />-->

        <View
            android:id="@+id/main_vertical_view2"
            android:layout_width="2dp"
            android:layout_height="72dp"
            android:layout_marginTop="475sp"
            android:layout_marginBottom="131dp"
            android:background="#646464"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/main_vertical_view3"
            android:layout_width="2dp"
            android:layout_height="10dp"
            android:layout_marginTop="590sp"
            android:background="#646464"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/main_vertical_view4"
            android:layout_width="2dp"
            android:layout_height="12dp"
            android:layout_marginTop="628sp"
            android:background="#646464"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/main_vertical_view5"
            android:layout_width="2dp"
            android:layout_height="10dp"
            android:layout_marginTop="578sp"
            android:background="#646464"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_circle_user_solid_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="답변"
                    android:textColor="#ff3c38"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:textSize="13sp"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="2sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/reply1_tv4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:text="우리 학교의 발전을 위해 의견을 남겨주셔서 감사합니다 학생의 의견은 의견 조합을 통해 해결할 수 있도록 노력할 것을 약속드립니다"
                android:padding="10dp"
                android:background="@color/white"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="510dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_circle_user_solid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:textSize="13sp"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="2sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/reply1_tv1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:text="동의합니다"
                android:padding="10dp"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/reply1_tv2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="동의합니다"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/reply1_tv3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="동의합니다"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>